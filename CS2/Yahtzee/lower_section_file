given_dice = [2,2,2,2,2]

ones = [] 
twoes = []
threes = []
fours = []
fives = []
sixes = []
for i in given_dice:
    if i == 1:
        ones.append(1)
    if i == 2:
        twoes.append(2)
    if i == 3:
        threes.append(3)
    if i == 4:
        fours.append(4)
    if i == 5:
        fives.append(5)
    if i == 6:
        sixes.append(6)
dice_count = [len(ones),len(twoes),len(threes),len(fours),len(fives),len(sixes)]
print(dice_count)

class lower_section:
    def __init__(self,dice_count,given_dice):
        self.dice = dice_count
        self.dice_values = given_dice
        self.score = 0
 
    def three_kind(self):
        for d in self.dice:
            if d >= 3:
                for i in self.dice_values:
                    self.score += i
        return self.score
    
    def four_kind(self):
        for d in self.dice:
            if d >= 3:
                for i in self.dice_values:
                    self.score += i
        return self.score

    def full_house(self):
        for i in self.dice:
            if i >= 3:
                for i in self.dice:
                    if i == 2:
                        self.score = 25
        return self.score
    
    def small_straight(self):
        
        pass                    #define
    
    def large_straight(self):
        pass                    #define

    def yahtzee(self):
        for i in self.dice:
            if i == 5:
                self.score = 50
        return self.score

    def Print(self):    #for testing method funcionality
       print(self.dice)


dice = lower_section(dice_count,given_dice)
#dice.Print()
print(dice.yahtzee())
